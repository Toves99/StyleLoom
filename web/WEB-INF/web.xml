    <!-- Filters -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>servlet.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern> <!-- Protect all API endpoints -->
    </filter-mapping>

